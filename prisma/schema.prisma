
generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/attorney_website/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  formType  String   @default("general") // general, attorney_specific
  attorney  String?  // for attorney-specific inquiries
  createdAt DateTime @default(now())
  status    String   @default("new") // new, reviewed, responded
  
  @@map("contact_submissions")
}
